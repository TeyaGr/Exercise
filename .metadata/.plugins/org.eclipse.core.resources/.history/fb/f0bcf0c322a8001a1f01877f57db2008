package Metodi;

public class WhileDoWhile {
public static void main(String[] args) {
	
	int i = 10;
	while(i>=0) {
	
		System.out.println(i--);
	}
	System.out.println();
	System.out.println("------------------------");
	System.out.println();
	int num = 20;
	while(num<0) {
		if(num%2==0) {
			System.out.println(num);
num--;
		}
	}
}
}
