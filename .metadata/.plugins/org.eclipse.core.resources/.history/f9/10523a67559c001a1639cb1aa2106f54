package algorithams;

public class Recursion {
public static void main(String[] args) {

System.out.println(factoriel(5));
dec(5);
}


	public static int factoriel(int n) {
		if(n==1) {
			return 1;
		}else {
			return n*factoriel(n-1);
		}
	}
public static void dec ( int n) {
	if(n<1) {
		return;
	}else {
		System.out.println(n);
		dec(n-1);
	}
	
}
}
